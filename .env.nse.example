# NSE Database Configuration
# Add these settings to your .env file for NSE-specific database configuration

# NSE Database Settings (if different from main database)
NSE_SQL_SERVER=localhost\MSSQLSERVER01
NSE_SQL_DATABASE=stockdata_db
NSE_SQL_USERNAME=your_username
NSE_SQL_PASSWORD=your_password
NSE_SQL_TRUSTED_CONNECTION=yes

# NSE-specific settings
NSE_DEFAULT_LOOKBACK_DAYS=60
NSE_MIN_DATA_POINTS=50
NSE_CONFIDENCE_THRESHOLD=0.65

# Model paths for NSE (reusing existing trained models)
NSE_MODEL_PATH=data/best_model_extra_trees.joblib
NSE_SCALER_PATH=data/scaler.joblib
NSE_ENCODER_PATH=data/target_encoder.joblib

# Export settings
NSE_EXPORT_DIR=results
NSE_REPORT_DIR=daily_reports
NSE_LOG_DIR=logs

# Technical indicator settings
RSI_PERIOD=14
SMA_PERIODS=5,10,20,50
EMA_PERIODS=5,10,20,50
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BB_PERIOD=20
BB_STD=2
ATR_PERIOD=14

# Trading signal thresholds
HIGH_CONFIDENCE_THRESHOLD=0.80
MEDIUM_CONFIDENCE_THRESHOLD=0.60
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# Performance settings
MAX_PROCESSING_TIME_MINUTES=30
BATCH_SIZE=100
MAX_RETRIES=3